
Question link:- https://leetcode.com/problems/design-spreadsheet/description/

class Spreadsheet {
public:
    vector<vector<int>> arr;
    Spreadsheet(int rows) {
        arr.resize(rows+1, vector<int>(26, 0));
    }
    
    void setCell(string cell, int value) {
        char ch = cell[0];
        int row = stoi(cell.substr(1));
        arr[row][ch-'A'] = value;
    }
    
    void resetCell(string cell) {
        char ch = cell[0];
        int row = stoi(cell.substr(1));
        arr[row][ch-'A'] = 0;
    }
    
    int getValue(string formula) {
        
        int n = formula.size();
        string r1 = "";
        int i = 1;
        while(i < n && formula[i] != '+'){
            r1 = r1 + formula[i];
            i++;
        }
        i++;
        string r2 = formula.substr(i);
        
        int val1 = 0;
        if(isalpha(r1[0])){
            char ch = r1[0];
            int row = stoi(r1.substr(1));
            val1 = arr[row][ch-'A'];
            
        }else{
            val1 = stoi(r1);
        }
        
        int val2 = 0;
        if(isalpha(r2[0])){
            char ch = r2[0];
            int row = stoi(r2.substr(1));
            val2 = arr[row][ch-'A'];
        }else{
            val2 = stoi(r2);
        }

        return val1+val2;
    }
};

/**
 * Your Spreadsheet object will be instantiated and called as such:
 * Spreadsheet* obj = new Spreadsheet(rows);
 * obj->setCell(cell,value);
 * obj->resetCell(cell);
 * int param_3 = obj->getValue(formula);
 */
